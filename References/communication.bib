	author = {Landmann, Dirk and Lagerkvist, Carl-Johan and Otter, Verena and Se, Carl-Johan Lagerkvist@slu},
	year = {123},
	note = {ISBN: 0123456789},
	keywords = {Agriculture, Developing countries, India, Partial least squares (PLS), Small-scale farmers, Smartphone, Structural equation modelling (SEM), Theory of planned behaviour (TPB)},
}

@article{gbangou_coproducing_2020-1,
