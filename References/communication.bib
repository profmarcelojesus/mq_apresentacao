	volume = {28},
	issn = {02612194},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-70049108305&doi=10.1016%2fj.cropro.2009.04.010&partnerID=40&md5=b1709c061a5ced18d1e64e24ee20cab4},
