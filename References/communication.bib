	author = {Makau, D.N. and Vanleeuwen, J.A. and Gitau, G.K. and Muraya, J. and McKenna, S.L. and Walton, C. and Wichtel, J.J.},
	year = {2018},
	note = {Publisher: Fundacion CIPAV},
}

@article{bello-bravo_ipm-based_2018,
	title = {{IPM}-based animation for {Fall} armyworm: {A} multi-institutional and virtual international collaboration using the scientific animations without borders ({SAWBO}) platform},
