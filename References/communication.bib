	note = {Publisher: Ubiquity Press},
	keywords = {Extension, Agriculture, Maize, Smallholder farmers, Participatory process, Short message services, Text messaging, Surveys, Administrative structures, New information and communication technologies, Seed, Small scale farmers, Smartphones},
}

