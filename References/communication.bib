	title = {Stratification and synthesis of crop-livestock production system using {GIS}},
	volume = {47},
	issn = {03432521},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-0032711783&doi=10.1023%2fA%3a1006995824626&partnerID=40&md5=d9ff19556aa4e347f3abe7228f51d55a},
