	note = {Place: ST ALBAN-ANLAGE 66, CH-4052 BASEL, SWITZERLAND
Publisher: MDPI
Type: Article},
	keywords = {agricultural extension, Nepal, hillside women farmers, picture lessons, sustainable agriculture kits, theory of planned behavior},
}

