	author = {van Vugt, D. and Franke, A.C.},
	year = {2018},
	note = {Publisher: Elsevier B.V.},
	keywords = {smallholder, Malawi, tillage, crop yield, cropping practice, weed control, rainfall, crop plant, soil moisture, nutrient limitation, Ipomoea batatas, potato, yield response, beetle, cultivar, Curculionidae, growing season, soil nutrient, vine},
	pages = {245--256},
}

@article{ortiz_diffusion_2018-1,
