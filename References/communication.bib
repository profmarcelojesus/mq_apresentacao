	note = {Place: ONE NEW YORK PLAZA, SUITE 4600, NEW YORK, NY, UNITED STATES
Publisher: SPRINGER
Type: Article},
	keywords = {Climate change, Multiple stressors, Asia, Hazards, Land users},
	pages = {826--844},
}

