Publisher: ACAD SCIENCE SOUTH AFRICA A S S AF
Type: Article},
	keywords = {indigenous knowledge, climate change and variability, farming decisions, interdisciplinary, usability of climate forecast},
}

@article{mavhura_systems_2019,
