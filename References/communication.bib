	keywords = {Agriculture, Climate change, agriculture, sustainable agriculture, rice, Smallholder farmers, climate change, smallholder, Farmers, India, Adaptation strategies, perception, tillage, technology, Crops, Climate variability, livelihood, climate effect, climate variation, adaptive management, agricultural management, environmental stress, human, resource management, Climate change adaptation, agricultural worker, Climate Change, Humans, rain, Rain, socioeconomics, soil quality, Article, risk assessment, drought, market, Drought, qualitative analysis, quantitative analysis, Droughts, ecological procedures, harvest, Participatory methods, politics, Qualitative and quantitative approaches, rainy season, Resource management, summer, Sustainable livelihood, Uttar Pradesh, winter},
