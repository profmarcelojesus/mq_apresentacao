	number = {11},
	journal = {Sustainability (Switzerland)},
	author = {Chirinda, N. and Arenas, L. and Loaiza, S. and Trujillo, C. and Katto, M. and Chaparro, P. and Nuñez, J. and Arango, J. and Martinez-Baron, D. and Loboguerrero, A.M. and Lopez-Lavalle, L.A.B. and Avila, I. and Guzmán, M. and Peters, M. and Twyman, J. and García, M. and Serna, L. and Escobar, D. and Arora, D. and Tapasco, J. and Mazabel, L. and Correa, F. and Ishitani, M. and Silva, M.D. and Graterol, E. and Jaramillo, S. and Pinto, A. and Zuluaga, A. and Lozano, N. and Byrnes, R. and LaHue, G. and Alvarez, C. and Rao, I. and Barahona, R.},
