	journal = {EXPERIMENTAL AGRICULTURE},
	author = {Vanek, Steven J. and Drinkwater, Laurie E.},
	month = jun,
	year = {2019},
	note = {Place: 32 AVENUE OF THE AMERICAS, NEW YORK, NY 10013-2473 USA
Publisher: CAMBRIDGE UNIV PRESS
Type: Article},
	pages = {145--168},
