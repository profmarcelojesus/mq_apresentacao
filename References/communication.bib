	keywords = {agricultural extension, cocoa, smallholder, agroforestry, Indonesia, sustainability, perception, soil fertility, Theobroma cacao, traditional knowledge, farmers knowledge, agricultural research, management practice, cultivation, tree, Southeast Sulawesi},
