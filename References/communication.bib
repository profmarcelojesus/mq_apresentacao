	journal = {AIMS Agriculture and Food},
	author = {Onyeneke, R.U. and Nwajiuba, C.A. and Emenekwe, C.C. and Nwajiuba, A. and Onyeneke, C.J. and Ohalete, P. and Uwazie, U.I.},
	year = {2019},
	note = {Publisher: AIMS Press},
	pages = {967--1006},
}

@article{geleto_factors_2019,
