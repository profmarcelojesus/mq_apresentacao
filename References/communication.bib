@article{mavhunduse_utilisation_2019,
	title = {Utilisation of {Mobile} {Phones} in {Accessing} {Agricultural} {Information} by {Smallholder} {Farmers} in {Dzindi} {Irrigation} {Scheme} in {South} {Africa}},
