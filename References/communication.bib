	journal = {Journal of Ethnopharmacology},
	author = {Stucki, K. and Cero, M.D. and Vogl, C.R. and Ivemeyer, S. and Meier, B. and Maeschli, A. and Hamburger, M. and Walkenhorst, M.},
	year = {2019},
	note = {Publisher: Elsevier Ireland Ltd},
	keywords = {Attitudes, Farmers, bovine, Medicine, human, nonhuman, adult, agricultural worker, female, health survey, male, animal, Animals, procedures, crop rotation, Humans, questionnaire, Adult, aged, Article, Female, Male, middle aged, Middle Aged, Surveys and Questionnaires, Health Knowledge, Practice, Medicinal, medicinal plant, phytotherapy, Phytotherapy, Plants, Aged, animal disease, Animal Diseases, gastrointestinal disease, attitude to health, veterinarian, statistics and numerical data, Young Adult, alternative medicine, Arnica, Arnica montana, Asteraceae, Austria, Brassica oleracea, Calendula officinalis, chemistry, comfrey, ethnopharmacology, Eucalyptus, herb, herbal medicine, Hypericum perforatum, Lamiaceae, marigold, Matricaria recutita, Norway spruce, plant medicinal product, Plant Preparations, Quercus robur, Rosaceae, Rumex obtusifolius, semi structured interview, Southern Europe, Swiss, Switzerland, thyme, Traditional, traditional medicine, Tropaeolum majus, veterinary medicine, young adult},
