	note = {Place: KARL JOHANS GATE 5, NO-0154 OSLO, NORWAY
Publisher: TAYLOR \& FRANCIS AS
Type: Article},
	keywords = {Uganda, farmer innovation, rice, smallholder farmers, social learning, video-mediated extension approach},
}

