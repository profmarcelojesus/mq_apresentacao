	year = {2020},
	keywords = {ICT, SMS, extension services, AgriTech, sustainable farming},
	pages = {1801214},
}

@article{landmann_determinants_123,
	title = {Determinants of {Small}-{Scale} {Farmers}' {Intention} to {Use} {Smartphones} for {Generating} {Agricultural} {Knowledge} in {Developing} {Countries}: {Evidence} from {Rural} {India}},
