	note = {Place: 111 RIVER ST, HOBOKEN 07030-5774, NJ USA
Publisher: WILEY
Type: Article},
	keywords = {scaling, Malawi, conservation agriculture, climate\&\#8208, no\&\#8208, smart agriculture, southern Africa, tillage},
	pages = {1809--1820},
}

@article{mowo_soil_2006,
