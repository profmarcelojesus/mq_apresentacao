	note = {Place: 1 OLIVERS YARD, 55 CITY ROAD, LONDON EC1Y 1SP, ENGLAND
Publisher: SAGE PUBLICATIONS LTD
Type: Article},
	keywords = {agriculture, information and communication technology, Kenya, Digital connectivity, Internet, smartphones, value chains},
	pages = {167--189},
}

