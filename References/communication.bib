@article{bentley_snowman_2013,
	title = {The snowman outline: {Fact} sheets by extensionists for farmers [{La} silhouette d'un bonhomme de neige: {Les} fiches d'informations produites par des vulgarisateurs pour les fermiers]},
	volume = {23},
	issn = {09614524},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84877859690&doi=10.1080%2f09614524.2013.781129&partnerID=40&md5=7bcb211a27bc1453900ec2e465d73906},
	doi = {10.1080/09614524.2013.781129},
	abstract = {Writing for smallholders in developing countries is an art that demands clear prose, a sound idea, and a logical outline. Although extension agents are often unaccustomed to writing, and usually need a sympathetic editor, extensionists know the target audience better than agricultural researchers or professional communicators. A one-page, 300-word fact sheet is a suitable format, allowing extensionists to write their insights for farmers. The fact sheet must be validated by farmers, who read it and review it for prose and concepts. The "snowman" is a logical outline in three-parts: head (problem), middle (agro-ecological background), and main part (the solution). The middle section is the hardest for potential fact sheet authors to grasp, but it is also the most important. Anticipating the information that will convince the reader to try the recommendation requires a good knowledge of the audience. The farmers are not a passive audience. Smallholders can be engaged in logical, creative ways, even in writing. © 2013 Copyright Taylor and Francis Group, LLC.},
	language = {English; French; Spanish},
	number = {3},
	journal = {Development in Practice},
	author = {Bentley, J. and Boa, E.},
	year = {2013},
	keywords = {smallholder, technology, education, developing world, agricultural worker, literature review},
	pages = {440--448},
}

@article{pali_potential_2013,
	title = {The potential influence of social networks on the adoption of breeding strategies},
	volume = {25},
