}

@article{maryudi_smallholder_2017,
	title = {Smallholder {Farmers}' {Knowledge} of {Regulations} {Governing} the {Sale} of {Timber} and {Supply} {Chains} in {Gunungkidul} {District}, {Indonesia}},
