	note = {Place: VAN GODEWIJCKSTRAAT 30, 3311 GZ DORDRECHT, NETHERLANDS
Publisher: SPRINGER
Type: Article},
	keywords = {Crops, Cucurbitaceae, Interaction network, Pollination, Smallholder agriculture, Tropics},
	pages = {731--740},
}

@article{labeyrie_networking_2021,
