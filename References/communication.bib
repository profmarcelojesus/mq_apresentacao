	number = {3},
	journal = {Journal of Land Use Science},
	author = {Ostwald, M. and Wibeck, V. and Stridbeck, P.},
	year = {2009},
	keywords = {smallholder, China, Asia, climate variation, policy making, questionnaire survey, globalization, land use planning, land use change, Loess Plateau, Eurasia, Shaanxi, Far East, meta-analysis},
