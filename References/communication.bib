	note = {Place: KAB-1, NEW DELHI 110012, INDIA
Publisher: INDIAN COUNC AGRICULTURAL RES
Type: Article},
	keywords = {ICT, Effectiveness, mKRISHI (R) PAWS (Personalised Advisory on Water and Soil), North-western Himalayan region},
