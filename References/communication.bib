	note = {Place: ST ALBAN-ANLAGE 66, CH-4052 BASEL, SWITZERLAND
Publisher: MDPI
Type: Article},
	keywords = {Ethiopia, sustainability, collaboration, leadership, push-pull technology, transdisciplinary research},
}

@article{bonatti_innovative_2018,
