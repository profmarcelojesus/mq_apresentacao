	author = {Zimmerer, Karl S.},
	month = feb,
	year = {2013},
	note = {Place: 2101 CONSTITUTION AVE NW, WASHINGTON, DC 20418 USA
Publisher: NATL ACAD SCIENCES
Type: Article},
	keywords = {food access, livelihood-landscape analysis, smallholder agricultural development, social-ecological resilience, sustainability science},
	pages = {2769--2774},
}

@article{lusiba_intra-household_2017,
