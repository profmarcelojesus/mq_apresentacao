	author = {Labeyrie, Vanesse and Antona, Martine and Baudry, Jacques and Bazile, Didier and Bodin, Orjan and Caillon, Sophie and Leclerc, Christian and Le Page, Christophe and Louafi, Selim and Mariel, Juliette and Massol, Francois and Thomas, Mathieu},
	month = jan,
	year = {2021},
	note = {Place: 22 RUE DE PALESTRO, PARIS, 75002, FRANCE
Publisher: SPRINGER FRANCE
Type: Review},
	keywords = {Agroecology, Social networks, Agrobiodiversity, governance, Management, Participatory approaches, Social-ecological interactions},
}

