	title = {Scenario-based approach in dealing with climate change impacts in {Central} {Tanzania}},
	volume = {85},
	issn = {00163287},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85000420368&doi=10.1016%2fj.futures.2016.11.007&partnerID=40&md5=bd320d2d421f3e126184ee8f4f594585},
