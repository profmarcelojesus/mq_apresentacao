	note = {Place: ST ALBAN-ANLAGE 66, CH-4052 BASEL, SWITZERLAND
Publisher: MDPI
Type: Article},
	keywords = {climate change, cocoa, Ghana, participatory, perceptions, REDD, smallholder, stakeholders},
}

@article{opara_outlook_2004,
