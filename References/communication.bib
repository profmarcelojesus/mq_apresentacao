	keywords = {Farmers, bovine, Cambodia, animal husbandry, Laos, Food Supply, agricultural worker, animal, Animals, questionnaire, Surveys and Questionnaires, Animal Husbandry, catering service, veterinary, Cattle, Cattle Diseases, epidemiology, Foot-and-Mouth Disease, hemorrhagic septicemia, Hemorrhagic Septicemia},
