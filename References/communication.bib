	journal = {FRONTIERS IN VETERINARY SCIENCE},
	author = {Batie, Chloe and Kassie, Daouda and Randravatsilavo, Diary Ny Ranto Mamorisoa and Baril, Laurence and Waret Szkuta, Agnes and Goutard, Flavie Luce},
