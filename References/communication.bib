Publisher: ELSEVIER SCI LTD
Type: Article},
	keywords = {Climate change, Ecuador, Hybrid epistemology, Knowledge systems, Tropical Andes},
	pages = {30--45},
}

@article{vanek_integrating_2019,
	title = {{INTEGRATING} {SCIENTIFIC} {AND} {LOCAL} {SOILS} {KNOWLEDGE} {TO} {EXAMINE} {OPTIONS} {BY} {CONTEXT} {INTERACTIONS} {FOR} {PHOSPHORUS} {ADDITION} {TO} {LEGUMES} {IN} {AN} {ANDEAN} {AGROECOSYSTEM}},
