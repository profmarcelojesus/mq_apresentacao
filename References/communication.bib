	journal = {Crop Protection},
	author = {Duong, T.T. and Brewer, T.D. and Luck, J. and Zander, K.K.},
	year = {2019},
	note = {Publisher: Elsevier Ltd},
	keywords = {smallholder, Australia, food security, perception, vulnerability, horticulture, livelihood, agricultural production, biodiversity, crop production, farmers knowledge, management practice, governance approach, Northern Territory, Western Australia, global trade, invasive species, security threat, social mobility, South Australia},
	pages = {147--155},
}

