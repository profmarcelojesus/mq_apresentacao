	journal = {World Development},
	author = {Voss, R.C. and Jansen, T. and Mané, B. and Shennan, C.},
	year = {2021},
	note = {Publisher: Elsevier Ltd},
	keywords = {information and communication technology, smallholder, mobile phone, technology adoption, Senegal, agricultural worker, fertilizer application, equity, gender relations},
}

@article{singleton_rodent_2021-1,
	title = {Rodent management and cereal production in {Asia}: {Balancing} food security and conservation},
	volume = {77},
