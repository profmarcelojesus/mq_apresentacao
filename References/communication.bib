@article{rosenberg_land-use_2005-1,
	title = {Land-use system modeling and analysis of shaded cacao production in {Belize}},
	volume = {64},
	issn = {01674366},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-18144405024&doi=10.1007%2fs10457-004-0535-9&partnerID=40&md5=358643af13ece09043bdd828d903a357},
