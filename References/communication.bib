	year = {2020},
	note = {Publisher: Elsevier Ltd},
	keywords = {sustainable development, smallholder, Nepal, technology adoption, farmers attitude, numerical model, questionnaire survey, soil degradation, regression analysis},
	pages = {160--168},
}

