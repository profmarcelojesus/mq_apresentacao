	author = {Yu, Lili and Niu, Ziheng and Yin, Shijiu and Gao, Yang and Tian, Borui},
	year = {2020},
	note = {Place: PO BOX 220, WAGENINGEN, 6700 AE, NETHERLANDS
Publisher: WAGENINGEN ACADEMIC PUBLISHERS
Type: Article},
	keywords = {attribute non-attendance, grain family farms, latent class model, mixed logit model, policy choice},
