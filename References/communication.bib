	journal = {AGRICULTURAL SYSTEMS},
	author = {Musvoto, Constansia and Mason, Nathaniel and Jovanovic, Nebo and Froebrich, Jochen and Tshovhote, Jane and Nemakhavhani, Mpho and Khabe, Themba},
	month = jul,
