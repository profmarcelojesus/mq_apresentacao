	author = {Slingerland, M. and Schut, M.},
	year = {2014},
	note = {Publisher: MDPI AG},
	keywords = {innovation, sustainability, Mozambique, bioenergy, Jatropha, biofuel, energy policy, niche, policy development, project management, renewable resource, shrub},
	pages = {7541--7563},
}

@article{boillat_importance_2013,
