	journal = {Climate and Development},
	author = {Barrett, S. and Ndegwa, W. and Maggio, G.},
	year = {2021},
	note = {Publisher: Taylor and Francis Ltd.},
	keywords = {Kenya, smallholder, livelihood, valuation, agrometeorology, weather forecasting, household income, economic analysis, decentralization, investment incentive, Kitui, meteorology},
	pages = {173--188},
}

@article{magesa_access_2020-1,
	title = {Access and use of agricultural market information by smallholder farmers: {Measuring} informational capabilities},
