	keywords = {rural development, agricultural extension, smallholder, agricultural development, capacity building, government, education, alternative agriculture, adaptive management, article, human, agricultural worker, policy making, investment, conceptual framework, environmental impact assessment, drought, environmental factor, Iran, human experiment, Health Belief Model, risk perception, structural equation modeling, adaptive behavior, Arabian Sea, Bushehr, Indian Ocean, Persian Gulf},
}

