	author = {Nyang'au, I.M. and Kelboro, G. and Hornidge, A.-K. and Midega, C.A.O. and Borgemeister, C.},
	year = {2018},
	note = {Publisher: MDPI AG},
	keywords = {innovation, action research, maize, Ethiopia, sustainability, empowerment, leadership, intercropping, adaptive management, stakeholder, research work, questionnaire survey, Zea mays, Desmodium, Striga, participatory approach, institutional framework, Lepidoptera, Brachiaria, weed},
}

@article{bonatti_innovative_2018-1,
